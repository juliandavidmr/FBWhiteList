{
  "name": "FB WhiteList",
  "version": "1.0",
  "description": "A mini tool to remove unwanted posts",
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "https://www.facebook.com/*",
    "https://*.facebook.com/*"
  ],
  "background": {
		"scripts": [
			"background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "FB WhiteList",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"  
}